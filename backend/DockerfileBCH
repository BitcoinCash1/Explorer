FROM node:lts-slim

ARG commitHash
ENV MEMPOOL_COMMIT_HASH=${commitHash}

WORKDIR /backend

RUN chown 1000:1000 ./
COPY --chown=1000:1000 dist ./package/

USER 1000

EXPOSE 8999

HEALTHCHECK --interval=20s --timeout=16s --start-period=10s \
  CMD node healthcheck.js

CMD node /backend/package/index.js
